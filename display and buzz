

// C++ code
//
#include <Adafruit_LiquidCrystal.h>

#include <LiquidCrystal_I2C.h>

int temp = 0;

int mosture = 0;

int analogtemp = 0;

int analogmosture = 0;

LiquidCrystal_I2C lcd_1(32, 16, 2);

void setup()
{
  lcd_1.init();
  pinMode(A0, INPUT);
  pinMode(A1, INPUT);
  Serial.begin(9600);
  pinMode(9, OUTPUT);

  lcd_1.clear();
  lcd_1.setBacklight(1);
}

void loop()
{
  analogtemp = analogRead(A0);
  analogmosture = analogRead(A1);
  Serial.println(analogmosture);
  //input go 20-358
  temp = map(analogtemp, 20, 358, -40, 125);
  //input go 0-876
  mosture = map(analogmosture, 0, 876, 0, 100);
  if (temp < 30 && mosture < 30) {
    digitalWrite(9, HIGH);
  } else {
    digitalWrite(9, LOW);
  }
  lcd_1.clear();
  lcd_1.setCursor(0, 0);
  lcd_1.print("Mosture");
  
  lcd_1.setCursor(0, 1);
  lcd_1.print(mosture);
  lcd_1.print("%");
  lcd_1.setCursor(10, 0);
  lcd_1.print("Temp");
  lcd_1.setCursor(10, 1);
  lcd_1.print(temp);
  lcd_1.print("C");
  delay(1000); // Wait for 1000 millisecond(s)
}
